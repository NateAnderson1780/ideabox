<%= link_to "Add New Idea to the Box", new_user_idea_path %>

<ul>
  <% @ideas.each do |idea| %>
    <li><%= link_to idea.subject, user_idea_path(current_user, idea.id) %><br><br>
    <%= link_to "Delete", user_idea_path(current_user, idea.id), method: :delete %><br>
    <%= link_to "Edit", edit_user_idea_path(current_user, idea.id) %></li><br>
  <% end %>
</ul>