<%= form_for([:admin, @idea]) do |f| %>

  <%= f.label :subject %>
  <%= f.text_field :subject %><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br>

  <%= f.label :category %>
  <%= f.collection_select :category_id, @categories, :id, :genre %><br>

  <%= f.label :user_id, "Owner" %>
  <%= f.collection_select :user_id, @users, :id, :name %><br>

  <%= f.submit %>
<% end %>